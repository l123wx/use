{
  "name": "@l123wx/use",
  "type": "module",
  "version": "0.0.2-beta.1",
  "packageManager": "pnpm@9.1.4",
  "description": "A tool for automatically importing @l123wx/shared into a project",
  "author": "Elvis Liao<https://github.com/l123wx>",
  "license": "MIT",
  "homepage": "https://github.com/l123wx/use#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l123wx/use.git"
  },
  "bugs": "https://github.com/l123wx/use/issues",
  "keywords": [
    "@l123wx/shared",
    "use-shared"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./bin/index.js",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsup --format esm,cjs --clean --dts",
    "watch": "tsup --format esm,cjs --watch",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "degit": "^2.8.4",
    "lodash-es": "^4.17.21",
    "picocolors": "^1.0.1",
    "yaml": "^2.4.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.18.1",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.8",
    "@types/degit": "^2.8.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.12",
    "@types/yaml": "^1.9.7",
    "@types/yargs": "^17.0.32",
    "bumpp": "^9.4.1",
    "eslint": "^9.3.0",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^9.1.1",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
